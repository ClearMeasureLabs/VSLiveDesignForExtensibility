<hibernate-configuration xmlns="urn:nhibernate-configuration-2.2">
  <session-factory>
    <property name="connection.driver_class">
			NHibernate.Driver.SqlClientDriver
		</property>
    <property name="connection.connection_string">Server=tcp:#{DatabaseServer}#,1433;Initial Catalog=#{DatabaseName}#;Persist Security Info=False;User ID=#{DatabaseUser}#;Password=#{DatabasePassword}#;MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;</property>
    <property name="show_sql">false</property>
    <property name="dialect">
			NHibernate.Dialect.MsSql2005Dialect
		</property>
    <property name="adonet.batch_size">100</property>
  </session-factory>
</hibernate-configuration>